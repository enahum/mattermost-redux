#!/usr/bin/env groovy

pipeline {
    agent {
        docker {
            image 'node:8'
        }
    }

    stages {

        stage('Checkout') {
            steps {
                cleanWs()
                checkout scm
            }
        }
        stage('Setup Redux') {
            steps {
                sh """
                npm install --ignore-scripts || exit 1
                touch .npminstall
                """
            }
        }

        stage('Check style') {
            steps {
                sh "npm run check || exit 1"
            }
        }

        stage('Run tests without mock server') {
            steps {
                sh "npm run test || exit 1"
            }
        }
    }
}
